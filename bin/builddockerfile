#!/bin/bash

# Get the extensions that are requested for the dockerfile.
# Sort them and remove duplicates.
EXTENSIONS=$(echo "$@" | xargs -n1 | sort -u | xargs)

# Get the script's directory. We use this to know where the dockerfile parts
# are at.
SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

# Read the header
cat $SCRIPT_DIR/../head.dockerfile

# Include each requested extension
for I in $EXTENSIONS
do
    echo -e "\n" # Add a newline
    cat $SCRIPT_DIR/../extensions/$I.dockerfile
done

# Read the footer
echo -e "\n" # Add a newline
cat $SCRIPT_DIR/../tail.dockerfile